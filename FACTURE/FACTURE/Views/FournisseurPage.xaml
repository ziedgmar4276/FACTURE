<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FACTURE.Views.FournisseurPage">
    <ContentPage.Content>
        <TableView Intent="Form" Margin="16,0">
            <TableRoot>

                <TableSection >
                    <EntryCell Label="Nom Fournisseur" Text= "{Binding Path=fournisseur.Nom_Fournisseur}"/>
                </TableSection>

                <TableSection>
                    <ViewCell>
                        <Button Text="Save" />
                    </ViewCell>
                </TableSection>

            </TableRoot>
        </TableView>
    </ContentPage.Content>
</ContentPage>